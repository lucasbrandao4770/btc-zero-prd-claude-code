<div class="section">
    <div class="section-header">
        <div class="icon"></div>
        Payment Summary
    </div>
    <div class="section-body">
        <div class="summary-grid">
            <div class="summary-section">
                <h4>Order Details</h4>
                <div class="summary-row">
                    <span class="label">Subtotal</span>
                    <span class="value">{{ invoice.subtotal|currency }}</span>
                </div>
                <div class="summary-row">
                    <span class="label">Delivery Fee</span>
                    <span class="value">{{ invoice.delivery_fee|currency }}</span>
                </div>
                <div class="summary-row">
                    <span class="label">Service Fee</span>
                    <span class="value">{{ invoice.service_fee|currency }}</span>
                </div>
                {% if invoice.tip_amount > 0 %}
                <div class="summary-row">
                    <span class="label">Tip</span>
                    <span class="value">{{ invoice.tip_amount|currency }}</span>
                </div>
                {% endif %}
                {% if invoice.discount_amount > 0 %}
                <div class="summary-row discount">
                    <span class="label">Discount</span>
                    <span class="value">-{{ invoice.discount_amount|currency }}</span>
                </div>
                {% endif %}
            </div>
            <div class="summary-section">
                <h4>Total</h4>
                <div class="summary-row total">
                    <span class="label">Total ({{ invoice.currency }})</span>
                    <span class="value">{{ invoice.total_amount|currency }}</span>
                </div>
                {% if payment %}
                <div style="margin-top: 16px;">
                    <h4>Payment Method</h4>
                    <div class="summary-row">
                        <span class="label">{{ payment.formatted_method }}</span>
                        <span class="value">{{ payment.masked_card }}</span>
                    </div>
                    <div class="summary-row">
                        <span class="label">Transaction ID</span>
                        <span class="value">{{ payment.transaction_id }}</span>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
