<div class="section">
    <div class="section-header">
        <div class="icon"></div>
        Delivery Information
    </div>
    <div class="section-body">
        <div class="delivery-info">
            <div class="delivery-block">
                <h4>Delivery Address</h4>
                <p><strong>{{ delivery.customer_name }}</strong></p>
                <p>{{ delivery.customer_address }}</p>
                <p>{{ delivery.customer_phone }}</p>
                {% if delivery.delivery_instructions %}
                <p style="font-style: italic; color: var(--text-muted);">
                    "{{ delivery.delivery_instructions }}"
                </p>
                {% endif %}
            </div>
            <div class="delivery-block">
                <h4>Delivery Details</h4>
                <p><strong>Driver:</strong> {{ delivery.driver_name }}</p>
                <p><strong>Distance:</strong> {{ delivery.formatted_distance }}</p>
                <p><strong>Estimated:</strong> {{ delivery.formatted_estimated }}</p>
                {% if delivery.formatted_actual %}
                <p><strong>Actual:</strong> {{ delivery.formatted_actual }}</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
