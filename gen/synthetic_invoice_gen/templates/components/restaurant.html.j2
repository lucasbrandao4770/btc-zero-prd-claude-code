<div class="section">
    <div class="section-header">
        <div class="icon"></div>
        Restaurant Details
    </div>
    <div class="section-body">
        <div class="restaurant-card">
            <div class="restaurant-info">
                <div class="restaurant-name">{{ invoice.restaurant_name }}</div>
                <div class="restaurant-meta">
                    <div>{{ invoice.cuisine_type }} Cuisine</div>
                    <div>{{ invoice.restaurant_address }}</div>
                    <div>{{ invoice.restaurant_phone }}</div>
                    <div>EIN: {{ invoice.restaurant_ein }}</div>
                </div>
            </div>
            <div class="restaurant-rating">
                {{ invoice.restaurant_rating|star_rating }} {{ invoice.restaurant_rating }}
            </div>
        </div>
    </div>
</div>
