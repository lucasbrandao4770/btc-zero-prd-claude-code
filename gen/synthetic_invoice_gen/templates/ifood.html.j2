{% extends "base.html.j2" %}

{% block extra_styles %}
.header {
    background: linear-gradient(135deg, #EA1D2C 0%, #C81824 100%);
}

.header-brand .logo-placeholder {
    background: #FFFFFF;
    color: #EA1D2C;
}

.section-header .icon {
    background: #EA1D2C;
}

.restaurant-rating {
    background: #fff3f4;
    padding: 8px 12px;
    border-radius: 8px;
}

.summary-row.total {
    border-color: #EA1D2C;
    color: #EA1D2C;
}

.items-table th {
    background: #fff3f4;
}

.footer .brand-name {
    color: #EA1D2C;
}

.section {
    border-radius: 12px;
}

.header {
    border-radius: 12px 12px 0 0;
}
{% endblock %}
