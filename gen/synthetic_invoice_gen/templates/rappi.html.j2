{% extends "base.html.j2" %}

{% block extra_styles %}
.header {
    background: linear-gradient(135deg, #FF441F 0%, #E63B1A 100%);
}

.header-brand .logo-placeholder {
    background: #FFFFFF;
    color: #FF441F;
}

.section-header .icon {
    background: #FF441F;
}

.restaurant-rating {
    background: #fff6f4;
    padding: 8px 12px;
    border-radius: 8px;
}

.summary-row.total {
    border-color: #FF441F;
    color: #FF441F;
}

.items-table th {
    background: #fff6f4;
}

.footer .brand-name {
    color: #FF441F;
}

.section {
    border-radius: 16px;
}

.header {
    border-radius: 16px 16px 0 0;
}

.footer {
    border-radius: 0 0 16px 16px;
}
{% endblock %}
